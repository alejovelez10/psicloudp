 <section id="sub-header" class="section bg-parallax1 pt-0 pb-0" style="background-image: url('../../img/bg/demo1.jpg');" >
        <div class="bg-overlay-black bg-overlay-5"></div>
        <div class="container">
            <div class="sub-wrapper">
                <h1>Nuestros Servicios</h1>
                

                <div class="breadcrumb-container clearfix">
                    <span>Estas aqui: </span>
                    <ul class="breadcrumb">
                      <li> <%= link_to "Inicio", inicio_path,  data: { turbolinks: false }%></li>
                      <li> <%= link_to "Servicios", servicios_path,  data: { turbolinks: false }%></li>
                    
                    </ul>
                </div><!-- /breadcrumb -->
            </div><!-- /sub-wrapper -->
        </div><!-- /container -->
  </section>

  <section class="section bg-white bd-b pt-70 pb-70">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-sm-12 col-xs-12">
                 
                   

                    <div class="row">
                    
                        <%  @services.each do |service|%>

                              <div class="col-lg-6 col-sm-6 col-xs-12" style = "margin-bottom: 35px;">
                            <h3 class="h4 text-uppercase mb-10 service"><a href="service-single.html"><%= service.name%> <br><br></a></h3>
                            <div class="post-thumbnail hover-link">
                                <%= (image_tag service.service_images.where(order: 1).first.imagen_url , class:"service-img" )%>
                                
                                    <%=link_to servicio_path(service.id), class:"overlay ov",   data: { turbolinks: false } do %>
                                     <i class="fa fa-link"></i></a>
                          <%end%>
                          <i class="fa fa-link"></i>
                            </div><!--/ post-thumbnail -->
                            <div class="mb-30 service-desc">
                                <p><%== service.description%></p>
                            </div>
                                <%= link_to "Ver mas", servicio_path(service) ,class: "btn btn-primary radius mb-30",  data: { turbolinks: false } %>
                        </div>


                        <%end%>

               
                    </div><!-- /row -->
                </div><!-- /col -->

              
            </div><!-- /row -->
        </div><!-- /container -->
    </section>