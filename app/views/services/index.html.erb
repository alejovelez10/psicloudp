
  

<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-8">
  <h1>Servicios</h1>
</div>
<div class="col-md-4 text-right">
  <%= link_to 'Nuevo Servicio', new_service_path,:"data-turbolinks" => false, class: "btn btn-primary" %>

</div>
  
</div>



<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Sub services</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @services.each do |service| %>
      <tr>
        <td><%= service.name %></td>
        <td><%= service.description %></td>
        <td><%= service.sub_services %></td>
        <td><%= service.user_id %></td>
        <td><%= link_to 'Show', service %></td>
        <td><%= link_to 'Edit', edit_service_path(service) %></td>
        <td><%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


